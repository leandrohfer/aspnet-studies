@model SalesSystemTest.Models.Seller

@{
    ViewData["Title"] = "Delete";
}

<h1>@ViewData["Title"]</h1>

<h3>Are your sure you want to delete this Seller?</h3>

<div>
    <hr />

    <div class="row">
        <div class="col-12 col-md-3">
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <strong>@Html.DisplayNameFor(model => model.Name):</strong> @Html.DisplayFor(model => model.Name)
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <strong>@Html.DisplayNameFor(model => model.Email):</strong> @Html.DisplayFor(model => model.Email)
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <strong>@Html.DisplayNameFor(model => model.BirthDate):</strong> @Html.DisplayFor(model => model.BirthDate)
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <strong>@Html.DisplayNameFor(model => model.BaseSalary):</strong> @Html.DisplayFor(model => model.BaseSalary)
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <strong>@Html.DisplayNameFor(model => model.Department):</strong> @Html.DisplayFor(model => model.Department.Name)
                </li>
            </ul>
            <br />
            <div class="text-center">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>