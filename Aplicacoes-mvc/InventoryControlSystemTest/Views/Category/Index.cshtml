@model IEnumerable<CategoryModel>
@{
    ViewData["Title"] = "Categories";
}

<header class="d-flex justify-content-between align-items-center">
    <div>
        <h1 class="text-primary">Category Listing</h1>
    </div>
    <div>
        <a asp-action="Insert" class="btn btn-primary">New Category</a>
    </div>
</header>

<hr />

<partial name="_Message"></partial>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-category">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Category in Model)
            {
                <tr>
                    <td>@Category.Name</td>
                    <td>
                        <a asp-action="Insert" asp-route-id="@Category.IdCategory" class="btn btn-sm btn-secondary">Update</a> |
                        <a asp-action="Delete" asp-route-id="@Category.IdCategory" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <br />
    <p class="">There is no category registered.</p>
}