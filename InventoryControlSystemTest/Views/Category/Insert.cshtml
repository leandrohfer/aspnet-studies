@model CategoryModel
@{
    if (Context.Request.RouteValues.ContainsKey("id"))
        ViewData["Title"] = "Update Category";
    else
        ViewData["Title"] = "Insert Category";
}

<h1 class="text-primary">@ViewData["Title"]</h1>
<hr />

<form asp-action="Insert" class="row">
    <input type="hidden" asp-for="@Model.IdCategory"/>
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.Name"></label><br />
        <input asp-for="@Model.Name" class="form-control" autofocus />
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        <button class="btn btn-success" type="submit">Save</button>
    </div>
</form>