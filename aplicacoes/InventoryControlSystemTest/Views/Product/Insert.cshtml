@model ProductModel
@{
    if (Context.Request.RouteValues.ContainsKey("id"))
        ViewData["Title"] = "Update Product";
    else
        ViewData["Title"] = "Insert Product";
}

<h1 class="text-primary">@ViewData["Title"]</h1>
<hr />

<form asp-action="Insert" class="row">
    <input type="hidden" asp-for="@Model.IdProduct" />

    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.Name"></label><br />
        <input asp-for="@Model.Name" class="form-control" autofocus />
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>

    <div class="w-100"></div>

    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.IdCategoria">Category</label><br />
        <select asp-for="@Model.IdCategoria" class="form-control" asp-items="@(IEnumerable<SelectListItem>)ViewBag.Categories"></select>
        <span asp-validation-for="@Model.IdCategoria" class="text-danger"></span>
    </div>

    <div class="w-100"></div>

    <div class="form-group col-sm-4 col-lg-2">
        <label asp-for="@Model.Quantity"></label><br />
        <input asp-for="@Model.Quantity" class="form-control" autofocus />
        <span asp-validation-for="@Model.Quantity" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-4 col-lg-2">
        <label asp-for="@Model.Price"></label><br />
        <input asp-for="@Model.Price" class="form-control" autofocus />
        <span asp-validation-for="@Model.Price" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button class="btn btn-success" type="submit">Save</button> |
        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>