@model IEnumerable<Answer>
@{
    ViewData["Title"] = "Result";
}

<div class="text-center">
    <h1>Partial Poll Result.</h1>
    <h4>Below are the data and answers.</h4>
    <div class="row">
        <div class="col-12 col-md-3" style="margin: auto;">
            <ul class="list-group">
                @foreach (Answer answer in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <strong>@(answer.Name):</strong> @(answer.Yes.Value ? "Yes" : "No")
                    </li>
                }
            </ul>
            <br />
            <div class="text-center">
                <a asp-action="Index" class="btn btn-secondary">Back to main screen</a>
            </div>
        </div>
    </div>
</div>
