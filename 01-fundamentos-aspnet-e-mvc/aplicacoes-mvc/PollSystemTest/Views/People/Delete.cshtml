@model PollSystemTest.Models.User
@{
    ViewData["Title"] = "Delete";
}
<div class="text-center">
    <h1>@ViewData["Title"]</h1>
    <h2>Are your sure you want to delete this User?</h2>
    <br />
</div>
<div class="row">
    <div class="col-12 col-md-3" style="margin: auto;">
        <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <strong>@Html.DisplayNameFor(model => model.Name):</strong> @Html.DisplayFor(model => model.Name)
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <strong>@Html.DisplayNameFor(model => model.Email):</strong> @Html.DisplayFor(model => model.Email)
            </li>
        </ul>
        <br />
        <div class="text-center">
            <form asp-action="Delete">
                <input type="hidden" asp-for="@Model.Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-secondary">Back to main screen</a>
            </form>
        </div>
    </div>
</div>